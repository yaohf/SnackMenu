<?xml version="1.0" encoding="utf-8"?>
    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/tab_widget_background"
            android:orientation="horizontal"
            android:padding="2dip" >

            <RadioButton
                android:id="@+id/main_rbtn"
                style="@style/tab_item_background"
                android:drawableTop="@drawable/tab_icon1"
                android:text="主页" />

            <RadioButton
                android:id="@+id/cart_rbtn"
                style="@style/tab_item_background"
                android:drawableTop="@drawable/tab_icon5"
                android:text="购物车结算" />
            
            <RadioButton
                android:id="@+id/search_rbtn"
                style="@style/tab_item_background"
                android:drawableTop="@drawable/tab_icon4"
                android:text="搜索" />
            <RadioButton
                android:id="@+id/about_rbtn"
                style="@style/tab_item_background"
                android:drawableTop="@drawable/tab_icon2"
                android:text="关于" />

            <RadioButton
                android:id="@+id/setting_rbtn"
                style="@style/tab_item_background"
                android:drawableTop="@drawable/tab_icon3"
                android:text="设置" />


        </RadioGroup>
